{
  "manifest_version": 3,
  "name": "dodo-chrome-extension",
  "description": "A chrome extension created with Dodo Framework (dodo.mikosoft.info).",
  "version": "1.0.0",
  "options_page": "options/opt.html",
  "action": {
    "default_title": "Popup",
    "default_popup": "./action/popup.html"
  },
  "content_scripts": [
    {
      "type": "module",
      "matches": [
        "https://www.mikosoft.info/*"
      ],
      "exclude_matches": [],
      "js": [
        "./content_scripts/foreground.js"
      ],
      "css": []
    }
  ],
  "background": {
    "service_worker": "./background/service_worker.js"
  },
  "icons": {
    "16": "./icons/logo-16.png",
    "48": "./icons/logo-48.png",
    "128": "./icons/logo-128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}
