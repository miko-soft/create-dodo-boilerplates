{
  "name": "dodo-desktop-electronforge",
  "productName": "dodo-desktop-electronforge",
  "version": "1.0.0",
  "description": "Initiate the development of desktop applications using the Dodo framework with ElectronJS Forge integration.",
  "author": "Firstname Lastname",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "inst": "rm -rf node_modules && rm package-lock.json && npm install",
    "dev": "npx vite --config vite.renderer.config.mjs",
    "prod": "npx vite --config vite.renderer.config.mjs --mode production",
    "build": "npx vite build --mode production"
  },
  "keywords": [
    "dodo framework",
    "electronjs",
    "electron forge"
  ],
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "@mikosoft/dodo": "~0.9.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "@electron-forge/plugin-vite": "^6.4.2",
    "electron": "27.0.4",
    "sass": "^1.62.1"
  }
}
